<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/textview_sound_recorder_heading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/activity_main_title_label"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/title_text_size"
      android:textStyle="bold"
      android:layout_marginTop="@dimen/margin_screen_top"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button_start_recording"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/activity_main_start_button"
      android:layout_marginTop="@dimen/margin_buttons"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_sound_recorder_heading" />

  <ImageView
      android:id="@+id/image_view_cat"
      android:layout_width="wrap_content"
      android:layout_height="300dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button_start_recording"
      app:srcCompat="@drawable/creature_cat_notification" />

</androidx.constraintlayout.widget.ConstraintLayout>
